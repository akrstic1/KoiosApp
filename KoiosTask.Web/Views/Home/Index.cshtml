@model List<KoiosTask.Model.City>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Add a city</h1>

<form id="add-city-form">
    <div class="form-group">
        <label class="control-label">City name</label>
        <input type="text" name="Name" class="form-control" />
    </div>
    
    <div class="form-group">
        <label class="control-label">City post code</label>
        <input type="text" name="PostCode" class="form-control" />
    </div>

    <div class="form-group">
        <label class="control-label">Country</label>
        <div id="selectWrapper"></div>
    </div>

    <div class="form-group">
        <button type="button" class="btn btn-outline-success" id="add-city-button">Add</button>
    </div>
</form>

<h1>City list</h1>

<div id="table-container">
    <partial name="_CityTable" />
</div>

@section Scripts{
    <script>
		$(document).ready(function () {
			$.ajax({
				url: "@Url.Action("GetCountryDropdown")",
				method: "GET",
				success: function (html) {
					$("#selectWrapper").html(html);
                }
            })
        })
            
		$("#add-city-form").on("click", "#add-city-button", function() {
            $.ajax({
                    url: "@Url.Action("AddCity", "Home")",
                    method: "POST",
                    data: $("#add-city-form").serialize(),
                    success: function(html) {
                        $("#table-container").html(html);
                        $('#add-city-form').trigger("reset");
                    }
                })
        })
    </script>
} 